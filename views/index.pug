extends layout

block content
  h1= title
  if user
    p Hello #{user.firstName}
    p Roles: #{user.roles}
  else
    a(href='http://localhost:9011/oauth2/authorize?client_id='+clientId+'&response_type=code&redirect_uri='+redirectUrl+'&scope=offline_access&state='+stateValue+'&code_challenge='+challenge+'&code_challenge_method=S256') Login

  p Welcome to #{title}